@model Tuan5_PhamBachMinhTri.Models.KhachHang

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>DangNhap</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>KhachHang</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
           
            <div class="col-md-10">
                <h4>Tên đăng nhập: </h4>
                @Html.EditorFor(model => model.tendangnhap, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.tendangnhap, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="col-md-10">
                <h4>Mật Khẩu: </h4>
                @Html.EditorFor(model => model.matkhau, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.matkhau, "", new { @class = "text-danger" })
            </div>
        </div>

        

       


        <div class="form-group">

            <div class="col-md-10">
                
                <input type="submit" value="Đăng Nhập" class="btn btn-default" />
                @Html.ActionLink("Đăng ký","DangKy","NguoiDung")
            </div>
            
        </div>
    </div>
}

<div>
   
    @Html.ActionLink("Trở về trang chủ", "Index", "Home")
</div>
